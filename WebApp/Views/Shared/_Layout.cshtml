@using Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CA Web Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/aos/aos.css" rel="stylesheet"> @* assets/vendor/aos/aos.css *@
    <link href="/lib/fontawesome-free/css/all.min.css" rel="stylesheet"> @* assets/vendor/fontawesome-free/css/all.min.css *@
    <link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet"> @* assets/vendor/glightbox/css/glightbox.min.css *@
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet"> @* assets/vendor/swiper/swiper-bundle.min.css *@
    <!-- Main CSS File -->
    <link href="~/css/main.css" rel="stylesheet"> @* assets/vendor/swiper/swiper-bundle.min.css *@

    <link rel="icon" href="/images/N1.png" type="image/x-icon">
</head>
<body>
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center">

            <a asp-area="" asp-controller="Home" asp-action="Index" class=" d-flex align-items-center me-auto">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <img style="width:80px" class="img-fluid" src="/images/N1.png" alt="Logo" />
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a class="" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a></li>
                    <li><a class="" asp-area="" asp-controller="ClientInformations" asp-action="Index">Consultation gratuite</a></li>
                    @* <li><a>Réalisations</a></li>
                    <li><a >Blog</a></li>       *@          
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <li class="dropdown">
                            <a href="#"><span>Management section</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a asp-area="Admin" asp-controller="BlogManagement" asp-action="Index">Blogs management</a></li>
                                <li><a asp-area="Admin" asp-controller="ProjectsManagement" asp-action="Index">Projects management</a></li>
                                <li><a asp-area="Admin" asp-controller="ClientInformations" asp-action="Index">Client informations</a></li>
                            </ul>
                        </li>
                        <li><partial name="_LoginPartial" /></li>
                        
                    }
                    
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
        </div>
    </header>
    <main role="main" class="main">
        <partial name="_Notification" />
        @RenderBody()
    </main>
    <footer id="footer" class="footer dark-background" style="
    position: static;
    top: 0; 
    width: auto;
    white-space: normal; 
    line-height: normal;
">

        <div class="container copyright mt-4">
            <div class="row align-items-center">
                <div class="col-6 mx-2">
                    <p>© <span>Copyright</span> <strong class="px-1 sitename">CA Web Solutions</strong> <span>All Rights Reserved</span></p>
                </div>
                <div class="col d-flex justify-content-end social-links">
                    <a href="mailto:contact@ca-web-solutions.net"><i class="bi bi-envelope"></i></a>
                    <a href="https://web.facebook.com/profile.php?id=61565205775651" target="_blank"><i class="bi bi-facebook"></i></a>
                    <a href="https://www.linkedin.com/company/ca-web-solutions0" target="_blank"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>



    </footer>


    <div id="preloader"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="//cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Vendor JS Files -->
    <script src="~/lib/aos/aos.js"></script>
    <script src="~/lib/glightbox/js/glightbox.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/purecounter/purecounter_vanilla.js"></script>
    <!-- Main JS File -->
    <script src="~/js/main.js"></script>
    <script>
        AOS.init();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
